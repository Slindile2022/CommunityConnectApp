<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ReportedPostsActivity">

    <!-- toll bar-->

    <RelativeLayout
        android:id="@+id/toolbarRl"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="10dp"
        android:background="@drawable/shape_admin">


        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_arrow_back_white_24"
            android:background="@android:color/transparent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="About"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            />








    </RelativeLayout>

    <TextView
        android:layout_marginTop="10dp"
        android:padding="12dp"
        android:layout_below="@id/toolbarRl"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="At Community Connect, we envision a world where communities thrive through open communication, shared interests, and supportive networks. This app is the embodiment of that vision, empowering users to connect with like-minded individuals, discover local events, and contribute to the vibrancy of their communities."
         />











</LinearLayout>