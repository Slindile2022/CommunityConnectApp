<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ReportedPostsActivity">

    <!-- toll bar-->

    <RelativeLayout
        android:id="@+id/toolbarRl"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:padding="10dp"
        android:background="@drawable/shape_admin">


        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/baseline_arrow_back_white_24"
            android:background="@android:color/transparent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Help on creating event"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            />








    </RelativeLayout>

    <ScrollView
        android:layout_below="@+id/toolbarRl"
        android:layout_width="match_parent"
        android:paddingTop="10dp"
        android:layout_height="match_parent"
        android:fillViewport="true">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">




            <TextView
                android:id="@+id/texts"
                android:layout_marginTop="10dp"
                android:padding="12dp"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Click the navigation menu called event(3)"
                />

            <ImageView
                android:id="@+id/image1"
                android:layout_below="@+id/texts"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:src="@drawable/homepage">

            </ImageView>

            <TextView

                android:layout_below="@id/image1"
                android:id="@+id/textss"
                android:layout_marginTop="10dp"
                android:padding="12dp"
                android:textSize="18dp"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. Click the add event button (3)"
                />

            <ImageView
                android:layout_below="@+id/textss"
                android:layout_width="match_parent"
                android:layout_height="500dp"
                android:src="@drawable/events">

            </ImageView>


        </RelativeLayout>


    </ScrollView>








</LinearLayout>